<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<!--<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd"> -->

<suite name="Open Cart Test Suite" verbose="4" thread-count="3" parallel="tests">
	
	<listeners> 
		<!--<listener
			class-name="com.qa.opencart.listeners.ExtentReportListener" /> -->
        <listener
			class-name="com.qa.opencart.list.TestAllureListener" />
		<listener
			class-name="com.qa.opencart.list.AnnotationTransformer" />
	</listeners>
	
	<test name="Open Cart Login Page Test">
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>

	<test name="Open Cart My Account Page Test">
		<classes>
			<class name="com.qa.opencart.tests.MyAccountPageTest" />
		</classes>
	</test>

	<test name="Open Cart Product Page Test">
		<classes>
			<class name="com.qa.opencart.tests.ProductInfoPageTest" />
		</classes>
	</test>

</suite>
